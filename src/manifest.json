{
  "version": "2.1.2",
  "manifest_version": 3,
  "name": "Time Out : Page Blocker",
  "description": "Blocks sites until you've held the button",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Time Out : Page Blocker",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.bundle.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "images/*",
        "page-block.html"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}
